extends ../layout

block content
    h5
        a(href='/bicicletas/create') + Nueva Bicicleta

    table.table
        thead
            tr
                th(scope='col') #
                th(scope='col') Color
                th(scope='col') Modelo
                th(scope='col') Ubicaci√≥n
                th(scope='col') Visualizar
                th(scope='col') Editar
                th(scope='col') Eliminar
        tbody
            each bici in bicis
                tr
                    td(scope='row')= bici.id 
                    td= bici.color
                    td= bici.modelo
                    td= bici.ubicacion
                    td
                        a(href=`bicicletas/${bici.id}/view`)
                            img(alt='Visualizar' src='/images/view.png' title='Visualizar Bicicleta')
                    td
                        a(href=`bicicletas/${bici.id}/update`)
                            img(alt='Editar' src='/images/edit.png' title='Editar Bicicleta')
                    td
                        a(href=`bicicletas/${bici.id}/delete`)
                            img(alt='Eliminar' src='/images/trash.png' title='Eliminar Bicicleta')